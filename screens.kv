#: import sm kivy.uix.screenmanager

ScreenManagement:
    transition: sm.NoTransition()
    LoginScreen:
    InstructionScreen:
    ProgressScreen:
    ResultsScreen

<LoginScreen>:
    name: 'login'

    Button:
        text: 'Create New User'
        font_size: 50

    Button:
        on_press: app.root.current = 'instruction'
        text: 'Continue'
        font_size: 50

<InstructionScreen>:
    name: 'instruction'

    Button:
        on_press: app.root.current = 'login'
        text: 'Back to Login'
        font_size: 50

    Button:
        on_press: app.root.current = 'progress'
        text: 'Run Test'
        font_size: 50

<ProgressScreen>:
    name: 'progress'

    Button:
        on_press: app.root.current = 'instruction'
        text: 'Cancel'
        font_size: 50

<ResultsScreen>:
    name: 'results'

    Button:
        on_press: app.root.current = 'login'
        text: 'Change Test'
        font_size: 50

    Button:
        on_press: app.root.current = 'progress'
        text: 'Run Test Again'
        font_size: 50


