#: import sm kivy.uix.screenmanager

ScreenManagement:
    transition: sm.NoTransition()
    LoginScreen:
    InstructionScreen:
    ProgressScreen:
    ResultsScreen:
    ProgressBarScreen

<LoginScreen>:
    name: 'login'

    BoxLayout:
        Button:
            text: 'Create New User'
            font_size: 50
        Button:
            on_press: app.root.current = 'instruction'
            text: 'Continue'
            font_size: 50

<InstructionScreen>:
    name: 'instruction'

    BoxLayout:
        Button:
            on_press: app.root.current = 'login'
            text: 'Back to Login'
            font_size: 50
        Button:
            on_press: app.root.current = 'progress'
            text: 'Run Test'
            font_size: 50

<ProgressScreen>:
    name: 'progress'

    BoxLayout:
        Button:
            on_press: app.root.current = 'instruction'
            text: 'Cancel'
            font_size: 50
        Button:
            text: 'Run'
            on_press: app.root.current = 'progressbar'
            font_size: 50

<ResultsScreen>:
    name: 'results'

    BoxLayout:
        Button:
            on_press: app.root.current = 'login'
            text: 'Change Test'
            font_size: 50
        Button:
            on_press: app.root.current = 'progress'
            text: 'Run Test Again'
            font_size: 50

<ProgressBarScreen>:
    name: 'progressbar'

    ProgressBar:
        max: 100
        value: 75


